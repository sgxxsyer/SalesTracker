<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it2107.dit.nyp.com.salestracker.AddSalesActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
    <TextView android:text="Item Name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/etName"
               android:hint="Enter Item Name here"/>
    <TextView android:text="Item Cost" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/etCostPrice"
               android:hint="Enter Item cost here"/>

    <TextView android:text="Item selling price" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/etSellingprice"
               android:hint="Enter Item selling price here"/>
    <TextView android:text="Quantity sold" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/etQtyprice"
               android:hint="Enter quantity sold here"/>
    <TextView android:text="Date sold" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/etDateOfSale"
               android:hint="Enter date here"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"

               >
 <CheckBox
     android:id="@+id/chkEditDate"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Change date"


     />
           </RelativeLayout>
           <TextView android:text="Sold with staff discount" android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1"
               >
           <RadioButton
               android:id="@+id/rbtnStaffrateYes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Yes"
               android:layout_weight="0.5"
               />
           <RadioButton
               android:id="@+id/rbtnStaffrateNo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="0.5"
               android:text="No"
               android:layout_toRightOf="@+id/rbtnStaffrateYes"

               />
           </RadioGroup>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal">
           <Button
               android:id="@+id/btnSaveChgs"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:onClick="btnSaveChanges"
               android:text="SAVE CHANGES"/>
           </RelativeLayout>
       </LinearLayout>


   </ScrollView>
</RelativeLayout>
